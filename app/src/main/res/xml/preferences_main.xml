<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_main_general_cagetory">
        <Preference
            android:iconSpaceReserved="false"
            android:key="@string/pref_main_general_reset_key"
            android:summary="@string/pref_main_general_reset_summary"
            android:title="@string/pref_main_general_reset_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_main_time_cagetory">
        <ListPreference
            android:defaultValue="@string/pref_main_time_iteration_relay_default"
            android:entries="@array/pref_main_time_iteration_relay_display"
            android:entryValues="@array/pref_main_time_iteration_relay_values"
            android:iconSpaceReserved="false"
            android:key="@string/pref_main_time_iteration_relay_key"
            android:title="@string/pref_main_time_iteration_relay_title" />
        <ListPreference
            android:defaultValue="@string/pref_main_time_refresh_relay_default"
            android:entries="@array/pref_main_time_refresh_relay_display"
            android:entryValues="@array/pref_main_time_refresh_relay_values"
            android:iconSpaceReserved="false"
            android:key="@string/pref_main_time_refresh_relay_key"
            android:title="@string/pref_main_time_refresh_relay_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_main_ads_category">
        <SwitchPreference
            android:defaultValue="@string/pref_main_ads_disabled_default"
            android:key="@string/pref_main_ads_disabled_key"
            android:title="@string/pref_main_ads_disabled_title"
            android:summary="@string/pref_main_ads_disabled_summary_enabled"
            android:summaryOff="@string/pref_main_ads_disabled_summary_disabled" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_main_logging_cagetory">
        <SwitchPreference
            android:defaultValue="@string/pref_main_logging_service_start_stop_default"
            android:key="@string/pref_main_logging_service_start_stop_key"
            android:title="@string/pref_main_logging_service_start_stop_title"
            android:summary="@string/pref_main_logging_service_start_stop_summary_enabled"
            android:summaryOff="@string/pref_main_logging_service_start_stop_summary_disabled" />
        <SwitchPreference
            android:defaultValue="@string/pref_main_logging_calendar_download_fail_default"
            android:key="@string/pref_main_logging_calendar_download_fail_key"
            android:title="@string/pref_main_logging_calendar_download_fail_title"
            android:summary="@string/pref_main_logging_calendar_download_fail_summary_enabled"
            android:summaryOff="@string/pref_main_logging_calendar_download_fail_summary_disabled" />
    </PreferenceCategory>

</PreferenceScreen>